{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "Build C++",
        "command": "C:/mingw64/bin/g++.exe",
        "args": [
          "-g",
          "-std=c++17",
          "-I${workspaceFolder}/include",
          "-L${workspaceFolder}/lib",
          "${workspaceFolder}/main.cpp",
          "${workspaceFolder}/src/glad.c",
          "${workspaceFolder}/src/ApplyTransformationTriangle.cpp",
          "${workspaceFolder}/src/CreateBasicTriangle.cpp",
          "${workspaceFolder}/src/CreateBasicSquare.cpp",
          "${workspaceFolder}/src/ShaderSources.cpp",
          "-lglfw3dll",
          "-o",
          "${workspaceFolder}/opengl_app.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "compiler: C:/mingw64/bin/g++.exe"
      }
    ]
  }